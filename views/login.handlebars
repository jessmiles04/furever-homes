<form class="login" method="POST" action="/login" >
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"></label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
            <div class="login-form ">
                <div class="sign-in-htm">
                    {{#if wrongData}}
                     <h4 class="wrongPassword" class="text-danger"> {{wrongData}}</h4>
                     {{/if}}
                    <div class="group">
                        <label for="user" class="label">Username</label>
                        <input type="userName" id="user"  name="username" type="text" class="input">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        <input type="password" id="pass" name="password" type="password" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Log In">
                    </div>
            </div>
        </div>
    </div>
</form>

